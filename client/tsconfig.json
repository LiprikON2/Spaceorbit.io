{
    "compilerOptions": {
        "jsx": "react",
        "target": "es6",
        "module": "es6",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "allowJs": true,
        "allowUnreachableCode": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "strictPropertyInitialization": false,

        "moduleResolution": "node",
        "lib": ["dom", "esnext"],
        // "lib": ["es5", "dom"]
        "paths": {
            "~/game": ["./src/game/scripts/index"],
            "~/game/*": ["./src/game/scripts/*"],
            "~/backend": ["./src/backend/index"],
            "~/backend/*": ["./src/backend/*"],
            "~/hooks": ["./src/ui/hooks/index"],
            "~/hooks/*": ["./src/ui/hooks/*"],
            "~/scenes": ["./src/game/scripts/scenes/index"],
            "~/scenes/*": ["./src/game/scripts/scenes/*"],
            "~/managers": ["./src/game/scripts/managers/index"],
            "~/managers/*": ["./src/game/scripts/managers/*"],
            "~/objects": ["./src/game/scripts/objects/index"],
            "~/objects/*": ["./src/game/scripts/objects/*"],
            "~/components": ["./src/ui/components/index"],
            "~/components/*": ["./src/ui/components/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
